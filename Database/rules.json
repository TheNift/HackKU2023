{
  "rules": {
    ".read": false,
    ".write": false,
    "usernames": {
      ".read": true,
      "$userId": {
        ".write": "!data.exists() && auth != null && auth.uid == $userId",
        ".validate": "newData.isString()"
      }
    },
    "follows": {
      "$userId": {
        ".write": "auth != null && auth.uid == $userId",
        ".read": "auth != null && auth.uid == $userId"
      }
    },
    "levels": {
      "$userId": {
        ".write": "auth != null && auth.uid == $userId",
        ".read": "true"
      }
    }
  }
}
